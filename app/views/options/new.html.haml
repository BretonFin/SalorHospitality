%h2= @option.new_record? ? (t '.new_option') : (t '.edit_option')

= error_messages_for 'options'

- form_for @option do |option_form|
  %table
    %tr
      %td= option_form.label('name', Option.human_attribute_name(:name))
      %td= option_form.text_field :name, :size => '20'
    %tr
      %td= option_form.label('category_id', Option.human_attribute_name(:category))
      %td= option_form.collection_select :category_id, Category.all, :id, :name, { :include_blank => true }
          
  %p= submit_tag( controller.action_name == 'new' ? (t :create) : (t :edit) )
