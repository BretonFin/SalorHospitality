%h2= t('activerecord.models.category.other')

= link_to (t :new), new_category_path, :class => 'links'

%ul#categories
  - @categories.each do |ca|
    %li{ :id => "category_#{ ca.id }" }
      %span.handle
      = link_to ca.name, edit_category_path(ca)

:javascript
  $(document).ready(function(){
    $('#categories').sortable({
      axis: 'y',
      dropOnEmpty: false,
      handle: '.handle',
      cursor: 'crosshair',
      items: 'li',
      opacity: 0.4,
      scroll: true,
      update: function(){
        $.ajax({
          type: 'post',
          data: $('#categories').sortable('serialize'),
          dataType: 'script',
          complete: function(request){
            //$('#categories').effect('highlight', {}, 300);
          },
        url: '/categories/sort'})
      }
    });
  });
