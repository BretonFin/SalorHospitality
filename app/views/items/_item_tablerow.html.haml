%tr{ :id => "item_#{ locals[:designator] }", :class => "item" }

  %td{ :id => "count_#{ locals[:designator] }", :class => 'item_count', :onclick => "increment_item('#{ locals[:designator] }')", :onmousedown => 'highlight_button(this)', :onmouseup => 'restore_button(this)' }= locals[:count]

  %td{ :id => "label_#{ locals[:designator] }", :class => 'item_label', :onclick => "add_comment_to_item('#{ t('.please_enter_item_comment') }', '#{ locals[:designator] }')", :onmousedown => 'highlight_button(this)', :onmouseup => 'restore_button(this)' }
    = locals[:label]
    = locals [:optionsnames]

  %td{ :id => "minus_#{ locals[:designator] }", :class => 'item_minus', :onclick => "decrement_item('#{ locals[:designator] }')", :onmousedown => 'highlight_button(this)', :onmouseup => 'restore_button(this)' }

  %td{ :class => 'item_options' }
    %select{ :id => "optionsselect_#{ locals[:designator] }", :onchange => "add_option_to_item('#{ locals[:designator] }', this)" }
      %option{ :selected => true }
      = locals[:optionsselect]

