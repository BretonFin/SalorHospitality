%tr{ :id => "item_DESIGNATOR", :designator => 'DESIGNATOR', :class => "item" }
  %td#inputfields
    %div{ :id => "fields_for_item_DESIGNATOR" }
      %input{ :id => "item_DESIGNATOR_start_count", :class => 'id', :name => "order[items_attributes][DESIGNATOR][count]", :type => 'hidden', :value => "COUNT", :keep => 0 }

      %input{ :id => "order_items_attributes_DESIGNATOR_article_id", :class => 'article_id', :name => "order[items_attributes][DESIGNATOR][article_id]", :type => 'hidden', :value => "ARTICLEID", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_quantity_id", :class => 'quantity_id', :name => "order[items_attributes][DESIGNATOR][quantity_id]", :type => 'hidden', :value => "QUANTITYID", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_id", :name => "order[items_attributes][DESIGNATOR][id]", :type => 'hidden', :value => "ITEMID", :keep => 0 }

      %input{ :id => "order_items_attributes_DESIGNATOR_count", :class => 'count', :name => "order[items_attributes][DESIGNATOR][count]", :type => 'hidden', :value => "COUNT", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_comment", :name => "order[items_attributes][DESIGNATOR][comment]", :type => 'hidden', :value => "COMMENT", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_usage", :name => "order[items_attributes][DESIGNATOR][usage]", :type => 'hidden', :value => "USAGE", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_optionslist", :name => "order[items_attributes][DESIGNATOR][optionslist]", :type => 'hidden', :value => "OPTIONSLIST", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_position", :name => "order[items_attributes][DESIGNATOR][position]", :type => 'hidden', :value => "POSITION", :keep => 0 }
      %input{ :id => "order_items_attributes_DESIGNATOR_price", :class => 'price', :name => "order[items_attributes][DESIGNATOR][price]", :type => 'hidden', :value => "PRICE", :keep => 0 }

      %input{ :id => "order_items_attributes_DESIGNATOR__destroy", :class => '_destroy', :name => "order[items_attributes][DESIGNATOR][_destroy]", :type => 'hidden', :keep => 0 }
      %input{ :id => "item_DESIGNATOR_printed_count", :class => 'id', :name => "order[items_attributes][DESIGNATOR][printed_count]", :type => 'hidden', :value => "0", :keep => 0 }

      %div{ :id => "options_for_item_DESIGNATOR" }

  %td{ :id => "tablerow_DESIGNATOR_count", :class => 'item_count', :onclick => "increment_item('DESIGNATOR')", :onmousedown => 'highlight_button(this)' } COUNT

  %td{ :id => "tablerow_DESIGNATOR_label", :class => "item_label", :onclick => "display_price_popup_of_item('DESIGNATOR'); display_comment_popup_of_item('DESIGNATOR');", :onmousedown => 'highlight_button(this)' }
    %span LABEL
    %small
      %br
      = t 'number.currency.format.unit'
      %span{ :id => "price_DESIGNATOR" } PRICE
      %span{ :id => "comment_DESIGNATOR" } COMMENT
      %div{ :id => "optionsnames_DESIGNATOR" } OPTIONSNAMES


  %td{ :id => "tablerow_DESIGNATOR_minus", :class => 'item_minus', :onclick => "decrement_item('DESIGNATOR')", :onmousedown => 'highlight_button(this)' }

  %td{ :id => "tablerow_DESIGNATOR_options", :class => 'item_options' }

    - if workstation?
      %a{ :onmouseup => "$('#options_select_div_DESIGNATOR').slideDown();" }
      %div.optionsselect{ :id => "options_select_div_DESIGNATOR" }
        %h3= t 'activerecord.models.option.other'
        %span.done{ :onclick => "add_option_to_item_from_div(this, 'DESIGNATOR', -2, null, '#{t('.done')}')" }
        %span.option{ :onclick => "add_option_to_item_from_div(this, 'DESIGNATOR', 0, null, '#{t('.clear')}')" }= t('.clear')
        %span.option{ :onclick => "add_option_to_item_from_div(this, 'DESIGNATOR', -1, null, '#{t('.no_printing')}')" }= t('.no_printing')
        %span.option{ :onclick => "add_option_to_item_from_div(this, 'DESIGNATOR', -3, null, '#{t('articles.new.take_away')}')" }= t('articles.new.takeaway')
        OPTIONSDIV

    - else
      %select{ :id => "options_select_select_DESIGNATOR", :onchange => "add_option_to_item_from_select('DESIGNATOR', this)" }
        %option{ :value => -2 }= t('.done')
        %option{ :value => 0 }= t('.clear')
        %option{ :value => -1 }= t('.no_printing')
        %option{ :value => -3 }= t('articles.new.takeaway')
        OPTIONSSELECT

    - if workstation?
      %div.comment_for_item{ :id => "comment_for_item_DESIGNATOR" }
        %p= t :please_enter_item_comment
        %span.display_keyboard{ :id => "comment_for_item_DESIGNATOR_display_keyboard" }
        %input{ :id => "comment_for_item_DESIGNATOR" }
        %div.enter_comment_or_price{ :id => "enter_comment_for_item_DESIGNATOR", :onclick => "add_comment_to_item('DESIGNATOR');" }
      %div.price_for_item{ :id => "price_for_item_DESIGNATOR" }
        %p= t :please_enter_item_price
        %span.display_keyboard{ :id => "price_for_item_DESIGNATOR_display_keyboard" }
        %input{ :id => "price_for_item_DESIGNATOR" }
        %div.enter_comment_or_price{ :id => "enter_price_for_item_DESIGNATOR", :onclick => "add_price_to_item('DESIGNATOR');" }
