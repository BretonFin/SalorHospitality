%tr{ :id => "item_DESIGNATOR", :designator => 'DESIGNATOR', :class => "item" }
  %td{ :id => "tablerow_DESIGNATOR_count", :class => 'item_count', :onclick => "increment_item('DESIGNATOR')", :onmousedown => 'highlight_button(this)' } COUNT

  %td{ :id => "tablerow_DESIGNATOR_label", :class => "item_label", :onclick => "display_price_popup_of_item('DESIGNATOR'); display_comment_popup_of_item('DESIGNATOR');", :onmousedown => 'highlight_button(this)' }
    %span LABEL
    %small
      %br
      = t 'number.currency.format.unit'
      %span{ :id => "price_DESIGNATOR" } PRICE
      %span{ :id => "comment_DESIGNATOR" } COMMENT
      %div{ :id => "optionsnames_DESIGNATOR" } OPTIONSNAMES

  %td{ :id => "tablerow_DESIGNATOR_minus", :class => 'item_minus', :onclick => "decrement_item('DESIGNATOR')", :onmousedown => 'highlight_button(this)' }

  %td{ :id => "tablerow_DESIGNATOR_options", :class => 'item_options' }
    - if workstation?
      %a{ :onmouseup => "open_options_div('DESIGNATOR');" }
      %div.optionsselect{ :id => "options_div_DESIGNATOR" }
        %h3= t 'activerecord.models.option.other'
        %span.done{ :onclick => "$('#options_div_DESIGNATOR').slideUp();", :title => "#{t('.done')}" }
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', 0)"   }= t('.clear')
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', -1"   }= t('.no_printing')
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', -2"   }= t('articles.new.takeaway')
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', -11)" } 1
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', -12)" } 2
        %span.option{ :onclick => "add_option_to_item(null, 'DESIGNATOR', -13)" } 3
      %div.comment_for_item{ :id => "comment_for_item_DESIGNATOR" }
        %p= t :please_enter_item_comment
        %span.display_keyboard{ :id => "comment_for_item_DESIGNATOR_display_keyboard" }
        %input{ :id => "comment_for_item_DESIGNATOR", :onkeyup => "catch_keypress('DESIGNATOR');" }
        %div.enter_comment_or_price{ :id => "enter_comment_for_item_DESIGNATOR", :onclick => "add_comment_to_item('DESIGNATOR');" }
      %div.price_for_item{ :id => "price_for_item_DESIGNATOR" }
        %p= t :please_enter_item_price
        %span.display_keyboard{ :id => "price_for_item_DESIGNATOR_display_keyboard" }
        %input{ :id => "price_for_item_DESIGNATOR", :onkeyup => "catch_keypress('DESIGNATOR');" }
    - else
      %select{ :id => "options_select_DESIGNATOR", :onchange => "add_option_to_item('DESIGNATOR', $(this).val(), 'CATID')" }
        %option{ :value => -2 }= t('.done')
        %option{ :value => 0 }= t('.clear')
        %option{ :value => -1 }= t('.no_printing')
        %option{ :value => -3 }= t('articles.new.takeaway')
        %option{ :value => -11 }== 1. #{t('printr.course')}
        %option{ :value => -12 }== 2. #{t('printr.course')}
        %option{ :value => -13 }== 3. #{t('printr.course')}
