%div{ :id => "fields_for_item_#{ designator }" }
  %input{ :id => "item_#{ designator }_start_count", :class => 'id', :name => "order[items_attributes][#{ designator }][count]", :type => 'hidden', :value => "#{ count }", :keep => 0 }

  / these fields need to be marked as keep also whenever one of the fields below is keep
  %input{ :id => "order_items_attributes_#{ designator }_article_id", :class => 'article_id', :name => "order[items_attributes][#{ designator }][article_id]", :type => 'hidden', :value => "#{ articleid }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_quantity_id", :class => 'quantity_id', :name => "order[items_attributes][#{ designator }][quantity_id]", :type => 'hidden', :value => "#{ quantityid }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_id", :name => "order[items_attributes][#{ designator }][id]", :type => 'hidden', :value => "#{ id }", :keep => 0 }

  %input{ :id => "order_items_attributes_#{ designator }_count", :class => 'count', :name => "order[items_attributes][#{ designator }][count]", :type => 'hidden', :value => "#{ count }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_comment", :name => "order[items_attributes][#{ designator }][comment]", :type => 'hidden', :value => "#{ comment }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_usage", :name => "order[items_attributes][#{ designator }][usage]", :type => 'hidden', :value => "#{ usage }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_optionslist", :name => "order[items_attributes][#{ designator }][optionslist]", :type => 'hidden', :value => "#{ optionslist }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_position", :name => "order[items_attributes][#{ designator }][position]", :type => 'hidden', :value => "#{ position }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }_price", :class => 'price', :name => "order[items_attributes][#{ designator }][price]", :type => 'hidden', :value => "#{ price }", :keep => 0 }
  %input{ :id => "order_items_attributes_#{ designator }__destroy", :class => '_destroy', :name => "order[items_attributes][#{ designator }][_destroy]", :type => 'hidden', :keep => 0 }
  %input{ :id => "item_#{ designator }_printed_count", :class => 'id', :name => "order[items_attributes][#{ designator }][printed_count]", :type => 'hidden', :value => "0", :keep => 0 }

  %div{ :id => "options_for_item_#{ designator }" }
    - if item
      - item.options.each do |o|
        %input{ :id => "item_#{ designator }_option_#{ o.id }", :class => 'optionprice', :type => 'hidden', :value => o.price || 0 }
