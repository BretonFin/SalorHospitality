%div{ :id => "item_#{ @designator }", :class => "item" }
  %div{ :id => "plus_#{ @designator }", :class => 'plusminus', :onclick => "$('order_items_attributes_new_#{ @designator }_count').value++" }+
  %div{ :id => "minus_#{ @designator }", :class => 'plusminus', :onclick => "$('order_items_attributes_new_#{ @designator }_count').value--" }-
  %div{ :id => "label_#{ @designator }", :class => 'label', :onclick => "$('order_items_attributes_new_#{ @designator }_count').value++" }= @label
  %input{ :id => "order_items_attributes_new_#{ @designator }_count", :name => "order[items_attributes][#{ @designator }][count]", :type => 'text', :value => '1' }
  %div{ :id => "delete_#{ @designator }", :class => 'plusminus', :onclick => "$('item_#{ @designator }').remove();" }X
  %input{ :id => "order_items_attributes_new_#{ @designator }_article_id", :name => "order[items_attributes][#{ @designator }][article_id]", :type => 'hidden', :value => "#{ @articleid }" }
  %input{ :id => "order_items_attributes_new_#{ @designator }_quantity_id", :name => "order[items_attributes][#{ @designator }][quantity_id]", :type => 'hidden', :value => "#{ @quantityid }" }
  %input{ :id => "order_items_attributes_new_#{ @designator }_sort", :name => "order[items_attributes][#{ @designator }][sort]", :type => 'hidden', :value => "#{ @sort }" }


%input{ :id => "order_items_attributes_new_#{ @designator }__delete", :name => "order[items_attributes][#{ @designator }][_delete]", :type => 'hidden', :value => '0' }
