%h2= t :settlement
= error_messages_for 'settlement'
= render :partial => 'detailed_list', :locals => { :orders => @orders, :selected_cost_center => nil }

- path = user_settlements_path @settlement.user
- form_for :settlement, @settlement, :url => path, :html => { :method => 'post' } do |sm_form|
  = sm_form.label('created_at', 'Datum')
  = sm_form.date_select('created_at')
  = submit_tag
