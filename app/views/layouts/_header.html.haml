%a#toggle_admin_interface{ :onclick => "#{ 'toggle_admin_interface();' if controller.controller_name == 'orders' and ( controller.action_name == 'index' or controller.action_name == 'login' )}" }
  %img{ :src => "/images/client_logo.png" }

%img#logo{ :src => "/images/logo-small.png" }

- if logged_in?
  #admin{ :style => "display: visible;" }
    .adminlinks
      = link_to( t('activerecord.models.order.other'), '/orders')

      - if @current_user.role.permissions.include? 'manage_settings'
        = link_to( t('activerecord.models.table.other'), tables_path)

      - if @current_user.role.permissions.include? 'manage_articles_categories_options'
        = link_to( t('activerecord.models.category.other'), categories_path)
        = link_to( t('activerecord.models.article.other'), articles_path)
        = link_to( t('activerecord.models.option.other'), options_path)

      - if @current_user.role.permissions.include? 'finish_own_settlement'
        = link_to( (t :unsettled_orders_generic_name), '/orders/unsettled')

      - if @current_user.role.permissions.include? 'view_all_settlements'
        = link_to( t('activerecord.models.settlement.other'), settlements_path)

      - if @current_user.role.permissions.include? 'view_statistics'
        = link_to( t('statistic'), statistics_path)

      - if @current_user.role.permissions.include? 'manage_settings'
        = link_to( t('activerecord.models.tax.other'), taxes_path)
        = link_to( t('activerecord.models.cost_center.other'), cost_centers_path)
        = link_to( t('activerecord.models.user.other'), users_path)
        = link_to( t('activerecord.models.role.other'), roles_path)
        = link_to( t('activerecord.models.company.one'), companies_path)

      = button_to t(:logout, :who => @current_user.login), session_path, :method => :delete
