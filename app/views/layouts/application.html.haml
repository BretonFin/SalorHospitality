!!!

%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    - if mobile?
      %meta{ 'name' => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" }
      %meta{ 'name' => "apple-mobile-web-app-capable", :content => "yes" }

    %title Bill Gastro

    = stylesheet_link_tag('generic', :media => 'screen')
    = javascript_include_tag 'jquery.js'
    = javascript_include_tag 'rails.js'
    = javascript_include_tag 'jquery-ui.js'
    - if workstation?
      = javascript_include_tag 'jquery.keyboard.js'
      = javascript_include_tag 'jquery.keyboard.config.js'
    = javascript_include_tag 'application-generic.js'
    - if controller.controller_name == 'orders' and controller.action_name == 'index' and @current_user
      = javascript_include_tag "/articles.js"
    %script
      == automatic_printing = #{ (@current_company and @current_company.automatic_printing and saas_variant? and workstation?) ? 'true' : 'false' };
    = csrf_meta_tag


    - if mobile?
      = stylesheet_link_tag('mobile', :media => 'screen')
      = javascript_include_tag 'application-mobile.js'
    - else
      = stylesheet_link_tag 'print', :media => 'print'
      = stylesheet_link_tag('workstation', :media => 'screen')
      = javascript_include_tag 'application-workstation.js'

  %body
    = render 'sessions/screenlock' if workstation? and controller.controller_name == 'orders'
    #container
      #header= render 'layouts/header'
      #flash
        #flash_notice= flash[:notice]
        #flash_error= flash[:error]
      #main= yield
      #footer
      #copyright
        %p== BillGastro #{ BillGastro::Application::VERSION } &mdash; The innovative Point Of Sale Software for your Restaurant
        %p== Copyright (C) 2012  Michael Franzl
