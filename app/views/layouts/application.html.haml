%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %meta{ :name => 'language', :content => 'de' }
    %title restaurant_helper
    = stylesheet_link_tag 'style'
    = javascript_include_tag :defaults

  %body
    - if flash[:notice]
      #flash_notice= flash[:notice]
    - if flash[:error]
      #flash_error= flash[:error]

    - if logged_in?

      #login_logout
        - if @current_user
          = "Eingeloggt als <b>#{ @current_user.login }</b>"
          %em= link_to '(Logout)', session_path, :method => :delete
        - else
          %em Ausgeloggt.
          = link_to 'Login', new_session_path

      #metanavi
        %small
          = link_to 'Bestellungen', orders_path
          = link_to 'Abrechnungen', settlements_path
          = link_to 'Verkaufsartikel', articles_path
          = link_to 'Kategorien', categories_path
          = link_to 'Lagerartikel', stocks_path
          = link_to 'Lagergruppen', groups_path
          = link_to 'Steuerklassen', taxes_path
          = link_to 'User', users_path
          = link_to 'Tische', tables_path

      .sidebar
        %small
          %p= link_to 'Blackboard', :controller => 'blackboard'
          %p= link_to 'Menucard', :controller => 'menucard'
          %p= link_to((t :waiterpad), :controller => 'waiterpad')
          %p= link_to 'Edit Menucard', :controller => 'menucard', :action => 'edit'

    #content
      = yield
