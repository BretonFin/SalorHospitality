- if @current_user
  = link_to (t :new), new_page_path, :class => 'links'
  - @pages.each do |p|
    = link_to p.id, edit_page_path(p)
    
- @pages.each do |p|
  - partial_htmls = @partial_htmls_pages[p.id]
  - background_image = "background-image: url('/pages/#{ p.id }/image');" if p.image
  .page{ :id => "page_#{ p.id }", :style => "width: #{ p.width }px; height: #{ p.height }px; #{ background_image } background-color: #{ p.color };" }= render :partial => 'page', :locals => { :page => p, :partial_htmls => partial_htmls }

:javascript
  slide(#{ @pages_ids.inspect }, #{ @pages.count }, 0);
  
  function slide(ids, count, current) {
    $('#page_' + ids[current]).fadeIn(1000).delay(6000).fadeOut(1000);
    if (current == (count - 1)) { current = 0 } else { current += 1; }
    setTimeout(function(){ slide(ids, count, current); }, 7000);
  }
