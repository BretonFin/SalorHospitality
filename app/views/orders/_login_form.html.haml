- if ipod?
  %img#logo{ :src => "/images/logo-small.png", :width => 200, :height => 77 }

- form_remote_tag :url => '/orders/login' do
  %p
    = label_tag 'login', (t '.username')
    = select_tag 'login', options_from_collection_for_select(User.all, 'login', 'login')
  %p
    = label_tag 'password', (t '.password')
    = password_field_tag 'password', '', :size => 9
  %p
    = submit_tag t('.login'), :class => 'submit'
