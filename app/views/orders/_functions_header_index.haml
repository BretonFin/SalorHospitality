- if @current_user.role.permissions.include? 'manage_business_invoice'
  %a.iconbutton.invoice_button{ :href => "/orders/last", :title => t('.show_last_order') }

- if saas_variant?
  %a.iconbutton.print1_button{ :onclick => "window.location.href = '/items.bill';", :title => t('.print_now') }

- if permit('see_item_notifications')
  %a.iconbutton.items_notifications_button{ :onclick => '$("#items_notifications").slideDown();', :title => t('.items_notifications') }

= button_to '', session_path, :method => :delete, :title => t(:logout, :who => @current_user.login)
