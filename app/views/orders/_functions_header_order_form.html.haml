  %a.iconbutton.cash_button{ :onclick => 'document.getElementById("order_action").value="save_and_go_to_invoice"; $("order_form_ajax").request();', :onmouseup => 'this.style.backgroundImage = "url(/images/send.gif)";', :title => t(:finish_order) }
