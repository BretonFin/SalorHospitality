- if workstation?
  %a.iconbutton.scrollup_button{ :onclick => 'scroll_for(-200,20)', :title => t(:scroll_up) }
- else
  %a.iconbutton.scrolldown_button{ :onclick => 'scroll_to($("#footer"),20)', :title => t(:scroll_down) }

%a#save_and_go_to_tables.iconbutton.tables_button{ :onclick => '$("#order_action").val("save_and_go_to_tables"); $("#order_form_ajax").submit();', :onmouseup => 'this.style.backgroundImage = "url(/images/send.gif)";', :title => t(:send_and_go_back) }
- if @current_user.role.permissions.include? 'finish_orders'
  %a.iconbutton.cash_button{ :onclick => '$("#order_action").val("save_and_go_to_invoice"); $("#order_form_ajax").submit();', :onmouseup => 'this.style.backgroundImage = "url(/images/send.gif)";', :title => t(:finish_order) }
%a.iconbutton.storno_button{ :onclick => '$("#order_action").val("clear_order_and_go_back"); $("#order_form_ajax").submit();', :title => t(:clear_order_and_go_back) }
%a.iconbutton.cancel_button{ :onclick => 'go_to_tables_offline();', :title => t(:cancel_and_go_back) }

- if @current_user.role.permissions.include?('move_order') and workstation?
  %select.target_table{ :onchange => 'if (this.value != "") {$("#order_action").val("move_order_to_table"); $("#target_table").val(this.value); $("#order_form_ajax").submit();}' }
    %option{ :value => '', :selected => true }
    = options_from_collection_for_select(Table.all, 'id', 'abbreviation')
