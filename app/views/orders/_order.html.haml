- if ipod?
  #staticfunctions
    %a.iconbutton.tables_button{ :onclick => 'document.getElementById("order_action").value="save_and_go_to_tables"; $("order_form_ajax").onsubmit();', :onmouseup => 'this.style.border = "2px solid white";', :title => t(:save_and_go_back) }
    %a.iconbutton.cancel_button{ :onclick => 'go_to_tables_offline();', :onmouseup => 'this.style.border = "2px solid white";', :title => t(:cancel_and_go_back) }
    %a.iconbutton.cash_button{ :onclick => 'document.getElementById("order_action").value="save_and_go_to_invoice"; $("order_form_ajax").onsubmit();', :onmouseup => 'this.style.border = "2px solid white";', :title => t(:finish_order) }

%a.iconbutton.scrolldown_button{ :onclick => 'Effect.ScrollTo("footer", 10);', :title => t(:scroll_down) }

- form_remote_tag :url => '/orders/receive_order_attributes_ajax', :html => { :id => 'order_form_ajax' } do
  = hidden_field_tag 'order_action'
  = hidden_field_tag 'order[id]'
  = hidden_field_tag 'order[table_id]'

  %div.waiter
    %select#order_user_id{ :name => 'order[user_id]' }
      = options_from_collection_for_select User.all, :id, :login, { :include_blank => !ipod? }

  #order_info= t :loading

  %div#categories
    - @categories.each do |category|
      %div{ :class => "category #{ category.name.delete ' ' }", :style => "background-color: #{category.color}; background-image: url('/images/category_#{category.icon}.png')", :onmousedown => "category_onmousedown(#{ category.id })", :onmouseup => 'category_onmouseup(this)' }
        %div{ :class => "category_label" }
          %span= category.name
  
  %div#articles
  %div#quantities
  %div#items
    %div.ordersum_container
      = t '.sum'
      = t 'number.currency.format.unit'
      %input#order_sum{ :value => 0 }
    %div#inputfields
    %table#itemstable

  %div#functions
    %a.iconbutton.tables_button{ :onclick => 'document.getElementById("order_action").value="save_and_go_to_tables"; $("order_form_ajax").onsubmit();', :onmouseup => 'this.style.border = "2px solid white";', :title => t(:save_and_go_back) }

    %select{ :id => 'target_table', :name => 'target_table', :onchange => 'document.getElementById("order_action").value="move_order_to_table"; $("order_form_ajax").onsubmit();' }
      = options_from_collection_for_select(Table.all, 'id', 'abbreviation')

    %a.iconbutton.cash_button{ :onclick => 'document.getElementById("order_action").value="save_and_go_to_invoice"; $("order_form_ajax").onsubmit();', :onmouseup => 'this.style.border = "2px solid white";', :title => t(:finish_order) }

    - if not ipod?
      %a.iconbutton.cancel_button{ :onclick => 'go_to_tables_offline();', :title => t(:cancel_and_go_back) }

    %a.iconbutton.scrollup_button{ :onclick => 'Effect.ScrollTo("categories", 10);', :title => t(:scroll_up) }

%div#footer
