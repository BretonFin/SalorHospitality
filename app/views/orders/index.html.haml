= javascript_include_tag 'order'

%h2= @current_user.login

#rooms= render 'rooms'
#tables= render @tables
#functions
  #functions_header_index= render 'functions_header_index' if workstation?
  #functions_header_order_form{ :style => 'display: none;' }= render 'functions_header_order_form'
  #functions_header_invoice_form{ :style => 'display: none;' }= render 'functions_header_invoice_form'
#orderform{ :style => 'display: none;' }= render 'order'
#invoices
#functions_footer{ :style => 'display: none;' }
  %img{ :src => '/images/send.gif', :style => 'display:none;' }
  - if workstation?
    %a.iconbutton.scrolldown_button{ :onclick => 'scroll_for(200,20);', :title => t(:scroll_down) }
  - else
    = render('functions_footer')
    
:javascript
  var i18n_server_no_response = '#{ escape_javascript t :server_no_response }';
  var i18n_just_order         = '#{ escape_javascript t :just_order }';
  var i18n_enter_price        = '#{ escape_javascript t :please_enter_item_price }';
  var i18n_enter_comment      = '#{ escape_javascript t :please_enter_item_comment }>';
  var i18n_no_printing        = '#{ escape_javascript t :no_printing }';
  var permission_immediate_storno = #{ @current_user.role.permissions.include?("make_immediate_storno") ? "true" : "false" };
  var i18n_decimal_separator  = '#{ escape_javascript t "number.currency.format.separator" }';
  var i18n_takeaway  = '#{ escape_javascript t "articles.new.takeaway" }';

  var mobile_special = #{ mobile_special? ? "true" : "false" };

  var screenlock_timeout = #{ @current_company.timeout };
  var screenlock_counter = screenlock_timeout;
  window.setInterval(
    function() {
      if (screenlock_counter == 0) { $('#screenlock form').submit(); }
      screenlock_counter -= 1;
    }
  , 1001);
