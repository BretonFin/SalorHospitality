%h2== #{ t 'statistic' } #{ t 'statistics.journal' }

= render 'menu'

- form_tag '/statistics/journal' do
  = CostCenter.human_name
  %select{ :name => 'cost_center_id' }
    %option{ :value => '' }= t('settlements.index.all_cost_centers')
    = options_from_collection_for_select @cost_centers, :id, :name
  = render 'date_form'
 
= render :partial => 'settlements/detailed_list', :locals => { :orders => @orders_from_to, :selected_cost_center => @selected_cost_center }
