<% header = "date;user;table;order#;article name;variant name;price;count;cost_center" -%>
<%= header %>
<% @orders.each do |o| -%>
<% o.items.each do |i| -%>
<% line = sprintf('%s;%s;%s;%s;%s;%s;%s;%i;%s', i.order.created_at, i.order.user.login, i.order.table.name, i.order.nr, i.article.name, i.quantity ? "#{ i.quantity.prefix } #{ i.quantity.article.name } #{ i.quantity.postfix }" : '-', number_with_precision(i.real_price), :locale => :de), i.count, i.order.cost_center.name) -%>
<%= line %>
<% end -%>
<% end -%>
