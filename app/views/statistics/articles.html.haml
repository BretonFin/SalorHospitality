%h2== #{ t 'statistic' } #{ t 'activerecord.models.article.other' }

= render 'menu'

- form_tag '/statistics/articles' do
  = render 'date_form'

%table
  %tr
    %th{ :style => 'width:200px' }= Article.human_attribute_name(:name)
    %th{ :style => 'width:100px;text-align:right;' }= t('settlements.detailed_list.count')
    %th{ :style => 'width:100px;text-align:right;' }= t('settlements.detailed_list.unit_price')
    %th{ :style => 'width:100px;text-align:right;' }= t(:sum)
  - @articlesums.each do |articlesum|
    %tr
      - article = Article.find articlesum[0]
      %td= article.name
      %td{ :style => 'text-align:right;' }= articlesum[1]
      %td{ :style => 'text-align:right;' }= number_to_currency article.price
      %td{ :style => 'text-align:right;' }= number_to_currency article.price * articlesum[1]
