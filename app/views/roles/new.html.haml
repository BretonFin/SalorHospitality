%h2= @role.new_record? ? (t '.new_role') : (t '.edit_role')

- if @role.errors.any?
  .errors
    %h3= t 'activerecord.errors.template.header', :count => @role.errors.size, :model => Role.model_name.human
    %ul
      - @role.errors.full_messages.each do |msg|
        %li= msg

