%h2= @table.name

%div#functions
  %a{ :href => orders_path, :title => t(:cancel_and_go_back) }
    %img{ :src => '/images/button_tables.png' }
    
  %a{ :onclick => 'Effect.ScrollTo("footer", 100);', :title => t(:scroll_down) }
    %img{ :src => '/images/button_scrolldown.png' }
      
%div#invoices
  - @unfinished_orders.each do |uo|
    %div.invoice
      = render :partial => 'orders/invoice_form', :locals => { :order => uo }
      
%div#footer
  %a{ :onclick => 'Effect.ScrollTo("container", 100);', :title => t(:scroll_up) }
    %img{ :src => '/images/button_scrollup.png' }
