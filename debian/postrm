#!/bin/sh
# postrm script for salor-hospitality
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

echo "postrm called with $1"

case "$1" in
  purge)
    db_get salor-hospitality/old-instances || true
    gOldInstances="${RET}"
    db_get salor-hospitality/current-instances || true
    gInstances="${RET}"
    if [ -f /usr/share/dbconfig-common/dpkg/postrm ]; then
      for lInstance in $gOldInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/postrm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
      for lInstance in $gInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/postrm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
    fi
    if which ucf >/dev/null 2>&1; then
      for lInstance in $gOldInstances; do
        ucf --purge /etc/salor-hospitality/$lInstance/database.yml
        ucf --purge /etc/salor-hospitality/$lInstance/config.yml
      done
      for lInstance in $gInstances; do
        ucf --purge /etc/salor-hospitality/$lInstance/database.yml
        ucf --purge /etc/salor-hospitality/$lInstance/config.yml
      done
    fi
    
    # package-generated or runtime files are removed
    rm -rf /usr/share/salor-hospitality/source/Gemfile.lock
    
    # removing /var/run files is not needed : it is mounted tmpfs in wheezy - anyway it does not hurt
    rm -rf /var/log/salor-hospitality
    rm -rf /var/cache/salor-hospitality
    rm -rf /etc/salor-hospitality

    rmdir /var/lib/salor-hospitality/* || true
    db_purge
  ;;
    
  remove)
    db_get salor-hospitality/old-instances || true
    gOldInstances="${RET}"
    db_get salor-hospitality/current-instances || true
    gInstances="${RET}"
    if [ -f /usr/share/dbconfig-common/dpkg/postrm ]; then
      for lInstance in $gOldInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/postrm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
      for lInstance in $gInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/postrm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
    fi
  ;;
  
  upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
  ;;
    
  *)
      echo "postrm called with unknown argument \`$1'" >&2
      exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
