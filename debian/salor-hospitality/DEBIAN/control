Depends: debconf (>= 0.5) | debconf-2.0, debconf, ruby1.9.1, libruby1.9.1, ruby1.9.1-dev, bundler, apache2, libapache2-mod-passenger, mysql-server, libmysqld-dev, onboard, beep, chromium-browser, libmagickwand-dev, udev
