#!/bin/sh
# prerm script for salor-hospitality
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

echo "prerm called with $1"

case "$1" in
  remove)
    db_get salor-hospitality/old-instances || true
    gOldInstances="${RET}"
    db_get salor-hospitality/current-instances || true
    gInstances="${RET}"
    if [ -f /usr/share/dbconfig-common/dpkg/prerm ]; then
      for lInstance in $gOldInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/prerm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
      for lInstance in $gInstances; do
        db_get salor-hospitality/instances/$lInstance/dbconfig-install || true
        if [ "$RET" = "true" ]; then
          ( . /usr/share/dbconfig-common/dpkg/prerm ; dbc_go salor-hospitality/instances/$lInstance $@ )
        fi
      done
    fi
  ;;

  purge|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
  ;;
    
  *)
    echo "prerm called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
