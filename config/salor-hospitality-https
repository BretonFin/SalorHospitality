<VirtualHost *:443>
  ServerName salor-hospitality
  DocumentRoot /opt/salor/hospitality/public
  RailsEnv production
  SSLEngine on
  SSLCertificateFile /etc/apache2/ssl/salor.crt
  SSLCertificateKeyFile /etc/apache2/ssl/salor.key
</VirtualHost>

