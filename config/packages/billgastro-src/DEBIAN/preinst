#!/bin/bash -e

. /usr/share/debconf/confmodule

case $1 in
  install)
    echo "preinst called with install"
    echo "Removing default Apache site..."
    rm -f /etc/apache2/sites-enabled/000-default
    echo "Done."
  ;;
  upgrade)
    echo "preinst called with upgrade"
    #do something
  ;;
  *)
    echo "preinst called with unknown argument '$1'" 1>&2
    exit 1
  ;;
esac
