#!/bin/sh

. /usr/share/debconf/confmodule

export RAILS_ENV=production
export PATH=$PATH:/opt/billgastro/bin

echo "Reading configuration from Debconf database ..."
db_get billgastro/enter_username
username=$RET
db_get billgastro/enter_password
password=$RET
db_get billgastro/enter_database
database=$RET

cd /opt/billgastro/billgastro

echo "Setting username and password for BillGastro database ..."
cp config/database-default.yml config/database.yml
sed -i -e "s/username:.*/username: $username/" config/database.yml
sed -i -e "s/password:.*/password: $password/" config/database.yml
sed -i -e "s/database:.*/database: $database/" config/database.yml

db_get billgastro/exceptions
if [ "$RET" = "true" ]
then
  echo "Changing behaviour of Exim E-Mail Server for debugging reports ..."
  sed -i -e "s/dc_eximconfig_configtype=.*$/dc_eximconfig_configtype='internet'/" /etc/exim4/update-exim4.conf.conf
else
  echo "Deactivating debugging reports ..."
  sed -i -e 's/config.middleware.use ExceptionNotifier/#&/' config/environments/production.rb
fi

result=$(mysql -u $username -p$password -Bse 'show databases' | grep $database)

if [ "$result" != "$database" ]
then
  echo "BillGastro database doesn't exist, so I'm creating it ..."
  rake-billgastro db:create
  echo "Migrating BillGastro database ..."
  rake-billgastro db:migrate
  echo "Populating database with seed data ..."
  rake-billgastro db:fixtures:load
  db_input high billgastro/dataset || true
  db_go
  db_get billgastro/dataset
  if [ "$RET" = "false" ]
  then
    echo "User selected minimal dataset. Truncating all tables except 'users' and 'roles'."
    mysql -u $username -p$password $database -Bse "truncate table articles; truncate table quantities; truncate table items; truncate table orders; truncate table options; truncate table taxes; truncate table tables; truncate table categories; truncate table settlements; truncate table cost_centers;  truncate table vendor_printers;"
  fi
else
  echo "BillGastro database already exists, so I'm just migrating ..."
  rake-billgastro db:migrate
fi

echo "Changing Permissions ..."
chown -R www-data:www-data /opt/billgastro/billgastro
chmod -R 755 /opt/billgastro/billgastro

echo "Modifying /etc/hosts ..."
result=`cat /etc/hosts | grep -c 'billgastro'`
if [ $result -eq 0 ]; then
  echo "127.0.0.1 localhost billgastro" >> /etc/hosts;
fi

echo "Restarting Apache ..."
service apache2 restart 0>/dev/null 1>/dev/null 2>/dev/null 3>/dev/null
echo "Restarting Exim4 ..."
service exim4 restart 0>/dev/null 1>/dev/null 2>/dev/null 3>/dev/null
echo "Restarting udev ..."
service udev restart 0>/dev/null 1>/dev/null 2>/dev/null 3>/dev/null

db_input high billgastro/done || true
db_go
